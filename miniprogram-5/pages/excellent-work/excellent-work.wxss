.excellent-page {
  min-height: 100vh;
  padding: var(--spacing-lg);
  background: linear-gradient(135deg, #87ceeb 0%, #ffffff 100%);
  box-sizing: border-box;
}

.page-header {
  display: flex;
  align-items: center;
  gap: var(--spacing-sm);
  margin-bottom: var(--spacing-lg);
}

.back-button {
  width: 72rpx;
  height: 72rpx;
  border-radius: var(--radius-md);
  background: var(--bg-primary);
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: var(--shadow-lg);
}

.header-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.header-title {
  font-size: var(--font-size-2xl);
  font-weight: var(--font-weight-semibold);
  color: var(--text-primary);
}

.header-subtitle {
  font-size: var(--font-size-sm);
  color: var(--text-tertiary);
}

.header-meta {
  display: flex;
  align-items: center;
}

.state-card {
  background: var(--bg-primary);
  border-radius: var(--radius-xl);
  padding: var(--spacing-xl) var(--spacing-lg);
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: var(--spacing-sm);
  box-shadow: var(--shadow-lg);
}

.state-card.error .state-text {
  color: var(--danger-color);
}

.state-text {
  font-size: var(--font-size-md);
  color: var(--text-secondary);
  text-align: center;
}

.retry-button {
  margin-top: var(--spacing-xs);
  padding: var(--spacing-sm) var(--spacing-xl);
  border-radius: var(--radius-full);
  background: linear-gradient(90deg, var(--warning-color) 0%, #ff5f2d 100%);
  color: var(--text-white);
  font-size: var(--font-size-sm);
}

.work-list {
  max-height: calc(100vh - 180rpx);
}

.work-card {
  background: var(--bg-primary);
  border-radius: var(--radius-2xl);
  margin-bottom: var(--spacing-md);
  box-shadow: var(--shadow-xl);
  overflow: hidden;
}

.work-body {
  padding: var(--spacing-lg);
  display: flex;
  flex-direction: column;
  gap: var(--spacing-sm);
}

.score-chip {
  align-self: flex-end;
  margin: var(--spacing-md) var(--spacing-lg) 0;
  padding: var(--spacing-sm) var(--spacing-md);
  border-radius: var(--radius-full);
  background: rgba(238, 10, 36, 0.1);
  color: var(--danger-color);
  font-size: var(--font-size-sm);
  font-weight: var(--font-weight-semibold);
  display: inline-flex;
}

.work-title-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 12rpx;
}

.work-title {
  font-size: var(--font-size-xl);
  font-weight: var(--font-weight-semibold);
  color: var(--text-primary);
  flex: 1;
}

.work-desc {
  font-size: var(--font-size-md);
  color: var(--text-secondary);
  line-height: 1.6;
}

.comment-box {
  background: var(--bg-secondary);
  border-radius: var(--radius-lg);
  padding: var(--spacing-md);
  display: flex;
  flex-direction: column;
  gap: var(--spacing-sm);
}

.comment-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.comment-title {
  font-size: var(--font-size-md);
  color: #ffb300;
  font-weight: var(--font-weight-semibold);
}

.comment-content {
  font-size: var(--font-size-md);
  color: #4a4a4a;
  line-height: 1.6;
}

.work-footer {
  padding: var(--spacing-md) var(--spacing-lg) var(--spacing-lg);
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-top: 1rpx solid #f1f2f6;
  flex-wrap: wrap;
  gap: var(--spacing-sm);
}

.footer-left {
  display: flex;
  align-items: center;
  gap: var(--spacing-xs);
  color: var(--text-tertiary);
  font-size: var(--font-size-sm);
}

.footer-right {
  display: flex;
  gap: var(--spacing-sm);
}

.icon-button {
  display: flex;
  align-items: center;
  gap: 6rpx;
  font-size: var(--font-size-sm);
  color: var(--text-secondary);
}

.icon-button text {
  font-size: var(--font-size-sm);
  color: inherit;
}


