.excellent-page {
  min-height: 100vh;
  padding: 32rpx;
  background: #f5f6fb;
  box-sizing: border-box;
}

.page-header {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 32rpx;
}

.back-button {
  width: 72rpx;
  height: 72rpx;
  border-radius: 16rpx;
  background: #ffffff;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.08);
}

.header-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.header-title {
  font-size: 40rpx;
  font-weight: 600;
  color: #323233;
}

.header-subtitle {
  font-size: 26rpx;
  color: #969799;
}

.header-meta {
  display: flex;
  align-items: center;
}

.state-card {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 48rpx 32rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.08);
}

.state-card.error .state-text {
  color: #ee0a24;
}

.state-text {
  font-size: 28rpx;
  color: #646566;
  text-align: center;
}

.retry-button {
  margin-top: 8rpx;
  padding: 16rpx 48rpx;
  border-radius: 999rpx;
  background: linear-gradient(90deg, #ff976a 0%, #ff5f2d 100%);
  color: #ffffff;
  font-size: 26rpx;
}

.work-list {
  max-height: calc(100vh - 180rpx);
}

.work-card {
  background: #ffffff;
  border-radius: 28rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 12rpx 32rpx rgba(0, 0, 0, 0.08);
  overflow: hidden;
}

.work-body {
  padding: 32rpx;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.score-chip {
  align-self: flex-end;
  margin: 24rpx 32rpx 0;
  padding: 12rpx 24rpx;
  border-radius: 999rpx;
  background: rgba(238, 10, 36, 0.1);
  color: #ee0a24;
  font-size: 26rpx;
  font-weight: 600;
  display: inline-flex;
}

.work-title-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 12rpx;
}

.work-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #323233;
  flex: 1;
}

.work-desc {
  font-size: 28rpx;
  color: #646566;
  line-height: 1.6;
}

.comment-box {
  background: #f7f8fa;
  border-radius: 20rpx;
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.comment-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.comment-title {
  font-size: 28rpx;
  color: #ffb300;
  font-weight: 600;
}

.comment-content {
  font-size: 28rpx;
  color: #4a4a4a;
  line-height: 1.6;
}

.work-footer {
  padding: 24rpx 32rpx 32rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-top: 1rpx solid #f1f2f6;
  flex-wrap: wrap;
  gap: 16rpx;
}

.footer-left {
  display: flex;
  align-items: center;
  gap: 8rpx;
  color: #969799;
  font-size: 24rpx;
}

.footer-right {
  display: flex;
  gap: 16rpx;
}

.icon-button {
  display: flex;
  align-items: center;
  gap: 6rpx;
  font-size: 26rpx;
  color: #646566;
}

.icon-button text {
  font-size: 24rpx;
  color: inherit;
}


