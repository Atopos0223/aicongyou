/**index.wxss**/
page {
  height: 100vh;
  background: #f7f8fa;
}
.login-page {
  min-height: 100vh;
  box-sizing: border-box;
  padding: 0 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.login-card {
  width: 100%;
  background: #ffffff;
  border-radius: 16rpx;
  padding: 32rpx;
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.06);
  transform: translateY(-12%);
}
.login-title {
  font-size: 34rpx;
  font-weight: 600;
  margin-bottom: 24rpx;
  color: #323233;
}
.login-button-wrap {
  margin-top: 24rpx;
}
