.task-page {
  min-height: 100vh;
  padding: var(--spacing-lg);
  background: linear-gradient(135deg, #87ceeb 0%, #ffffff 100%);
}

/* 页面标题区域 */
.page-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: var(--spacing-lg);
}

.header-left {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.back-button {
  width: 64rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 8rpx;
  transition: opacity 0.3s;
}

.back-button:active {
  opacity: 0.6;
}

.header-title {
  font-size: var(--font-size-xl);
  font-weight: var(--font-weight-semibold);
  color: var(--text-primary);
}

.header-right {
  display: flex;
  align-items: center;
  gap: var(--spacing-xs);
}

.header-score {
  font-size: var(--font-size-lg);
  font-weight: var(--font-weight-semibold);
  color: var(--warning-color);
}

/* 标签切换 */
.tab-switch {
  display: flex;
  margin-bottom: var(--spacing-md);
  background: var(--bg-tertiary);
  border-radius: var(--radius-full);
  padding: var(--spacing-xs);
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: var(--spacing-sm) 0;
  border-radius: var(--radius-full);
  font-size: var(--font-size-md);
  color: var(--text-secondary);
}

.tab-item.active {
  background: var(--bg-primary);
  color: var(--primary-color);
  font-weight: var(--font-weight-semibold);
  box-shadow: var(--shadow-sm);
}

/* 任务卡片列表 */
.task-list {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-md);
}

.task-card {
  background: var(--bg-primary);
  border-radius: var(--radius-xl);
  padding: var(--spacing-lg);
  box-shadow: var(--shadow-sm);
}

/* 任务标题区域 */
.task-header {
  margin-bottom: var(--spacing-sm);
}

.task-title-wrapper {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: var(--spacing-sm);
}

.task-title {
  font-size: var(--font-size-2xl);
  font-weight: var(--font-weight-semibold);
  color: var(--text-primary);
  flex: 1;
}

.task-course {
  font-size: var(--font-size-sm);
  color: var(--text-tertiary);
  margin-top: var(--spacing-xs);
}

.task-tag {
  flex-shrink: 0;
}

/* 任务描述 */
.task-desc {
  font-size: var(--font-size-md);
  color: var(--text-secondary);
  line-height: 1.6;
  margin-bottom: var(--spacing-lg);
}

/* 指标网格 */
.metrics-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: var(--spacing-sm);
  margin-bottom: var(--spacing-lg);
}

.metric-item {
  background: var(--bg-secondary);
  border-radius: var(--radius-md);
  padding: var(--spacing-md);
  display: flex;
  align-items: center;
  gap: var(--spacing-sm);
}

.metric-icon-wrapper {
  flex-shrink: 0;
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(25, 137, 250, 0.1);
  border-radius: 8rpx;
}

.metric-content {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
  flex: 1;
}

.metric-label {
  font-size: var(--font-size-sm);
  color: var(--text-tertiary);
}

.metric-value {
  font-size: var(--font-size-md);
  font-weight: var(--font-weight-semibold);
  color: var(--text-primary);
}

.metric-value.green {
  color: var(--accent-color);
}

.metric-value.orange {
  color: var(--warning-color);
}

/* 底部按钮 */
.task-footer {
  display: flex;
  gap: var(--spacing-sm);
}

.footer-button {
  flex: 1;
  height: 88rpx;
  border-radius: var(--radius-md);
  display: flex;
  align-items: center;
  justify-content: center;
  gap: var(--spacing-xs);
  font-size: var(--font-size-md);
  font-weight: var(--font-weight-medium);
  color: var(--text-white);
  transition: opacity 0.3s;
}

.footer-button:active {
  opacity: 0.8;
}

.gray-button {
  background: var(--text-secondary);
}

.gradient-button {
  background: var(--primary-gradient);
  box-shadow: var(--shadow-primary);
}

.footer-button text {
  color: var(--text-white);
  font-size: var(--font-size-md);
  font-weight: var(--font-weight-medium);
}

.footer-meta {
  margin-top: 12rpx;
  display: flex;
  justify-content: flex-end;
}

/* 团队任务专属 */
.team-summary-card {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: var(--spacing-sm);
  padding: var(--spacing-md);
  background: var(--primary-gradient);
  border-radius: var(--radius-xl);
  margin-bottom: var(--spacing-md);
  color: var(--text-white);
  box-shadow: var(--shadow-primary);
}

.submission-full-button {
  margin-top: var(--spacing-md);
  width: 100%;
  height: 96rpx;
  border-radius: var(--radius-lg);
  background: var(--primary-gradient);
  color: var(--text-white);
  display: flex;
  align-items: center;
  justify-content: center;
  gap: var(--spacing-sm);
  font-size: var(--font-size-lg);
  font-weight: var(--font-weight-semibold);
  box-shadow: var(--shadow-primary);
}

.submission-full-button text {
  color: var(--text-white);
  font-size: var(--font-size-lg);
}

.summary-item {
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.summary-label {
  font-size: var(--font-size-sm);
  opacity: 0.8;
}

.summary-value {
  font-size: var(--font-size-lg);
  font-weight: var(--font-weight-semibold);
}

.team-state {
  background: var(--bg-primary);
  border-radius: var(--radius-xl);
  padding: var(--spacing-xl) var(--spacing-md);
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: var(--spacing-sm);
  box-shadow: var(--shadow-sm);
}

.team-state.error {
  border: 1rpx solid var(--danger-color);
}

.state-text {
  font-size: var(--font-size-md);
  color: var(--text-secondary);
}

.retry-button {
  margin-top: var(--spacing-xs);
  padding: var(--spacing-sm) var(--spacing-xl);
  border-radius: var(--radius-full);
  background: linear-gradient(90deg, var(--warning-color) 0%, #ff5722 100%);
  color: var(--text-white);
  font-size: var(--font-size-sm);
}

.team-card .team-metrics {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: var(--spacing-sm);
  padding: var(--spacing-md);
  background: #f5f7ff;
  border-radius: var(--radius-md);
  margin-bottom: var(--spacing-sm);
}

.team-metric-item {
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.team-metric-label {
  font-size: var(--font-size-sm);
  color: var(--text-secondary);
}

.team-metric-value {
  font-size: var(--font-size-lg);
  font-weight: var(--font-weight-semibold);
  color: var(--text-primary);
}

.team-metric-value.highlight {
  color: var(--primary-color);
}

