.task-page {
  min-height: 100vh;
  padding: 32rpx;
  background: #f7f8fa;
}

/* 页面标题区域 */
.page-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
}

.header-left {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.back-button {
  width: 64rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 8rpx;
  transition: opacity 0.3s;
}

.back-button:active {
  opacity: 0.6;
}

.header-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #323233;
}

.header-right {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.header-score {
  font-size: 32rpx;
  font-weight: 600;
  color: #ff976a;
}

/* 任务卡片列表 */
.task-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.task-card {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

/* 任务标题区域 */
.task-header {
  margin-bottom: 16rpx;
}

.task-title-wrapper {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 16rpx;
}

.task-title {
  font-size: 40rpx;
  font-weight: 600;
  color: #323233;
  flex: 1;
}

.task-tag {
  flex-shrink: 0;
}

/* 任务描述 */
.task-desc {
  font-size: 28rpx;
  color: #646566;
  line-height: 1.6;
  margin-bottom: 32rpx;
}

/* 指标网格 */
.metrics-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 16rpx;
  margin-bottom: 32rpx;
}

.metric-item {
  background: #f7f8fa;
  border-radius: 16rpx;
  padding: 20rpx;
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.metric-icon-wrapper {
  flex-shrink: 0;
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(25, 137, 250, 0.1);
  border-radius: 8rpx;
}

.metric-content {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
  flex: 1;
}

.metric-label {
  font-size: 24rpx;
  color: #969799;
}

.metric-value {
  font-size: 28rpx;
  font-weight: 600;
  color: #323233;
}

.metric-value.green {
  color: #07c160;
}

.metric-value.orange {
  color: #ff976a;
}

/* 底部按钮 */
.task-footer {
  display: flex;
  gap: 16rpx;
}

.footer-button {
  flex: 1;
  height: 88rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  font-size: 28rpx;
  font-weight: 500;
  color: #ffffff;
  transition: opacity 0.3s;
}

.footer-button:active {
  opacity: 0.8;
}

.gray-button {
  background: #646566;
}

.gradient-button {
  background: linear-gradient(90deg, #1989fa 0%, #7232dd 100%);
  box-shadow: 0 4rpx 12rpx rgba(25, 137, 250, 0.3);
}

.footer-button text {
  color: #ffffff;
  font-size: 28rpx;
  font-weight: 500;
}

