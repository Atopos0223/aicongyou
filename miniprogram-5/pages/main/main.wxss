/* 页面容器 */
.main-page {
  min-height: 100vh;
  background: linear-gradient(135deg, #87ceeb 0%, #ffffff 100%);
  padding-bottom: var(--spacing-xl);
}

/* 顶部Header */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: var(--spacing-xl) var(--spacing-lg) var(--spacing-lg);
}

.header-left {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.logo {
  font-size: var(--font-size-3xl);
}

.platform-name {
  font-size: var(--font-size-3xl);
  font-weight: var(--font-weight-semibold);
  color: var(--text-primary);
}

.header-right {
  display: flex;
  align-items: center;
}

/* 个人数据看板按钮区域 */
.dashboard-button-section {
  padding: 0 var(--spacing-lg) var(--spacing-lg);
  background: transparent;
}

.dashboard-button-section .van-button {
  background: var(--primary-gradient) !important;
  border: none !important;
}

.active-courses {
  display: flex;
  align-items: center;
  gap: var(--spacing-xs);
  background: var(--bg-secondary);
  padding: var(--spacing-sm) var(--spacing-md);
  border-radius: var(--radius-full);
}

.active-icon {
  font-size: var(--font-size-lg);
}

.active-text {
  font-size: var(--font-size-md);
  color: var(--text-primary);
}

/* 搜索栏 */
.search-section {
  padding: 0 var(--spacing-lg) var(--spacing-md);
  background: transparent;
}

.custom-search {
  background: var(--bg-primary) !important;
  border-radius: 40rpx !important;
}

.custom-search .van-search__content {
  background: transparent !important;
}

.custom-search .van-search__action {
  background: transparent !important;
}

.custom-search .van-field__input {
  color: var(--text-primary) !important;
}

.custom-search .van-field__input::placeholder {
  color: var(--text-tertiary) !important;
}

/* 学期筛选 */
.filter-scroll {
  padding: 0 var(--spacing-lg) var(--spacing-lg);
  white-space: nowrap;
}

.filter-section {
  display: inline-flex;
  gap: var(--spacing-sm);
  min-width: max-content;
}

.filter-btn {
  flex: none;
  padding: 0 var(--spacing-lg);
  height: 64rpx;
  line-height: 64rpx;
  text-align: center;
  background: var(--bg-secondary);
  border-radius: var(--radius-full);
  font-size: var(--font-size-md);
  color: var(--text-secondary);
  transition: all 0.3s;
}

.filter-btn.active {
  background: var(--primary-gradient);
  color: var(--text-white);
  font-weight: var(--font-weight-medium);
  box-shadow: var(--shadow-primary);
}

/* 课程列表容器 */
.courses-container {
  padding: 0 var(--spacing-lg);
  background: transparent;
}

/* 课程卡片 */
.course-card {
  background: var(--bg-primary);
  border-radius: var(--radius-xl);
  overflow: hidden;
  margin-bottom: var(--spacing-lg);
  box-shadow: var(--shadow-lg);
  transition: transform 0.3s, box-shadow 0.3s;
}

.course-card:active {
  transform: scale(0.98);
}

/* 课程封面 */
.course-header {
  width: 100%;
  height: 200rpx;
  background: var(--primary-gradient);
}

/* 课程信息 */
.course-info {
  padding: var(--spacing-lg);
  padding-top: var(--spacing-lg);
}

.course-title {
  font-size: var(--font-size-3xl);
  font-weight: var(--font-weight-semibold);
  color: var(--text-primary);
  margin-bottom: var(--spacing-sm);
}

.course-term {
  font-size: var(--font-size-md);
  color: var(--text-secondary);
  margin-bottom: var(--spacing-sm);
}

.course-desc {
  font-size: var(--font-size-md);
  color: var(--text-secondary);
  line-height: 1.6;
}

/* 学习进度 */
.progress-section {
  padding: 0 var(--spacing-lg) var(--spacing-lg);
}

.progress-label {
  font-size: var(--font-size-md);
  color: var(--text-primary);
  margin-bottom: var(--spacing-sm);
}

.progress-wrapper {
  display: flex;
  align-items: center;
  gap: var(--spacing-sm);
}

.progress-text {
  font-size: var(--font-size-md);
  color: var(--primary-color);
  font-weight: var(--font-weight-medium);
  min-width: 80rpx;
}

/* 统计卡片 */
.stats-section {
  display: flex;
  gap: var(--spacing-sm);
  padding: 0 var(--spacing-lg) var(--spacing-lg);
}

.stat-card {
  flex: 1;
  background: var(--bg-secondary);
  border-radius: var(--radius-md);
  padding: var(--spacing-md);
  text-align: center;
}

.stat-value {
  font-size: var(--font-size-2xl);
  font-weight: var(--font-weight-semibold);
  margin-bottom: var(--spacing-xs);
}

.stat-label {
  font-size: var(--font-size-sm);
  color: var(--text-secondary);
}

/* 加载中 */
.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: var(--spacing-xl) 0;
  color: var(--text-primary);
}

/* 空状态 */
.empty {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: var(--spacing-xl) 0;
  color: var(--text-tertiary);
  font-size: var(--font-size-md);
}
