.team-page {
  min-height: 100vh;
  padding: 32rpx;
  background: #f7f8fa;
}

.page-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.header-left {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.back-button {
  width: 64rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 16rpx;
  background: #ffffff;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.header-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #323233;
}

.header-right {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  line-height: 1.2;
}

.header-score {
  font-size: 40rpx;
  font-weight: 700;
  color: #ff976a;
}

.header-label {
  font-size: 24rpx;
  color: #969799;
}

.summary-card {
  background: linear-gradient(90deg, #1989fa 0%, #7232dd 100%);
  border-radius: 24rpx;
  padding: 32rpx;
  color: #ffffff;
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 6rpx 20rpx rgba(25, 137, 250, 0.3);
}

.summary-item {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.summary-label {
  font-size: 24rpx;
  opacity: 0.8;
}

.summary-value {
  font-size: 32rpx;
  font-weight: 600;
}

.state-block {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 48rpx 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.state-block.error {
  border: 1rpx solid #ee0a24;
}

.state-text {
  font-size: 28rpx;
  color: #646566;
}

.retry-button {
  margin-top: 8rpx;
  padding: 16rpx 48rpx;
  border-radius: 999rpx;
  background: linear-gradient(90deg, #ff976a 0%, #ff5722 100%);
  color: #ffffff;
  font-size: 26rpx;
}

.task-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.task-card {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.task-header {
  margin-bottom: 16rpx;
}

.task-title-wrapper {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 16rpx;
}

.task-title {
  font-size: 40rpx;
  font-weight: 600;
  color: #323233;
  flex: 1;
}

.task-course {
  font-size: 26rpx;
  color: #969799;
  margin-top: 8rpx;
}

.task-desc {
  font-size: 28rpx;
  color: #646566;
  line-height: 1.6;
  margin-bottom: 32rpx;
}

.metrics-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.metric-item {
  background: #f7f8fa;
  border-radius: 16rpx;
  padding: 20rpx;
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.metric-icon-wrapper {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(25, 137, 250, 0.1);
  border-radius: 8rpx;
}

.metric-content {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.metric-label {
  font-size: 24rpx;
  color: #969799;
}

.metric-value {
  font-size: 28rpx;
  font-weight: 600;
  color: #323233;
}

.metric-value.green {
  color: #07c160;
}

.metric-value.orange {
  color: #ff976a;
}

.team-metrics {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
  padding: 24rpx;
  background: #f5f7ff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
}

.team-metric-item {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.team-metric-label {
  font-size: 24rpx;
  color: #646566;
}

.team-metric-value {
  font-size: 32rpx;
  font-weight: 600;
  color: #323233;
}

.team-metric-value.highlight {
  color: #1989fa;
}

.task-footer {
  display: flex;
  justify-content: flex-end;
}

.footer-updated {
  font-size: 24rpx;
  color: #969799;
}

