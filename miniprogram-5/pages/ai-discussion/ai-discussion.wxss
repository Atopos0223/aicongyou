/* 页面容器 */
.chat-page {
  width: 100%;
  height: 100vh;
  background: #f7f8fa;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

/* 顶部导航栏 */
.chat-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 32rpx;
  padding-top: calc(20rpx + env(safe-area-inset-top));
  background: #ffffff;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.1);
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 100;
}

.header-back {
  width: 64rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
}

.header-title {
  flex: 1;
  text-align: center;
  font-size: 32rpx;
  font-weight: 600;
  color: #323233;
  padding: 0 32rpx;
}

.header-translate {
  width: 64rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
}

.translate-icon {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background: rgba(0, 0, 0, 0.05);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: #323233;
}

/* 消息列表区域 */
.chat-messages {
  flex: 1;
  width: 100%;
  height: 0; /* 配合flex使用 */
  padding-top: calc(100rpx + env(safe-area-inset-top));
  padding-bottom: calc(140rpx + env(safe-area-inset-bottom));
  background: #f7f8fa;
}

.messages-container {
  min-height: 100%;
  padding: 32rpx 32rpx 24rpx;
  display: flex;
  flex-direction: column;
}

/* 消息项 */
.message-item {
  margin-bottom: 32rpx;
  display: flex;
  animation: fadeIn 0.3s ease-in;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(10rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* AI消息 */
.message-ai {
  justify-content: flex-start;
}

.message-ai-content {
  display: flex;
  align-items: flex-start;
  max-width: 85%;
}

.message-avatar {
  margin-right: 16rpx;
  flex-shrink: 0;
}

.ai-logo {
  width: 64rpx;
  height: 64rpx;
  border-radius: 12rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: 600;
  color: #ffffff;
}

.message-wrapper {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.message-label {
  font-size: 24rpx;
  color: rgba(0, 0, 0, 0.5);
  margin-bottom: 8rpx;
}

.message-bubble {
  border-radius: 16rpx;
  padding: 20rpx 24rpx;
  word-wrap: break-word;
  word-break: break-all;
  position: relative;
}

.ai-bubble {
  background: #ffffff;
  border-radius: 16rpx 16rpx 16rpx 4rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.user-bubble {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 16rpx 16rpx 4rpx 16rpx;
  margin-left: auto;
}

.user-bubble .message-text {
  color: #ffffff;
}

.message-text {
  font-size: 28rpx;
  line-height: 1.6;
  color: #323233;
  white-space: pre-wrap;
}

/* 用户消息 */
.message-user {
  justify-content: flex-end;
}

.message-user-content {
  display: flex;
  align-items: flex-start;
  max-width: 85%;
  margin-left: auto;
}

/* 正在输入动画 */
.typing-indicator {
  padding: 24rpx 28rpx;
}

.typing-dots {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background: rgba(0, 0, 0, 0.4);
  animation: typingDot 1.4s infinite ease-in-out;
}

.dot:nth-child(1) {
  animation-delay: 0s;
}

.dot:nth-child(2) {
  animation-delay: 0.2s;
}

.dot:nth-child(3) {
  animation-delay: 0.4s;
}

@keyframes typingDot {
  0%, 60%, 100% {
    transform: translateY(0);
    opacity: 0.4;
  }
  30% {
    transform: translateY(-10rpx);
    opacity: 0.8;
  }
}

/* 底部输入栏 */
.chat-input-bar {
  padding: 24rpx 32rpx;
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
  background: #ffffff;
  border-top: 1rpx solid rgba(0, 0, 0, 0.1);
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 100;
}

.input-wrapper {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.chat-input {
  flex: 1;
  height: 80rpx;
  background: #f7f8fa;
  border-radius: 40rpx;
  padding: 0 32rpx;
  font-size: 28rpx;
  color: #323233;
  border: none;
}

.chat-input::placeholder {
  color: rgba(0, 0, 0, 0.4);
}

.send-button {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: rgba(0, 0, 0, 0.05);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
  cursor: pointer;
}

.send-button-active {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  transform: scale(1.05);
}

.send-icon {
  font-size: 36rpx;
  line-height: 1;
  transform: rotate(-45deg);
}

