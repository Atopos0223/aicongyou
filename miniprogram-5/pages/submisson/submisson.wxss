.submission-page {
  min-height: 100vh;
  padding: 32rpx;
  background: #f6f7fb;
  box-sizing: border-box;
}

.page-header {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 32rpx;
}

.back-button {
  width: 72rpx;
  height: 72rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 16rpx;
  background: #ffffff;
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.06);
}

.header-content {
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.header-title {
  font-size: 40rpx;
  font-weight: 600;
  color: #323233;
}

.header-subtitle {
  font-size: 26rpx;
  color: #969799;
}

.state-card {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 48rpx 32rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.08);
}

.state-card.error .state-text {
  color: #ee0a24;
}

.state-text {
  font-size: 28rpx;
  color: #646566;
}

.retry-button {
  margin-top: 8rpx;
  padding: 16rpx 48rpx;
  border-radius: 999rpx;
  background: linear-gradient(90deg, #ff976a 0%, #ff5f2d 100%);
  font-size: 26rpx;
  color: #ffffff;
}

.form-card {
  background: #ffffff;
  border-radius: 32rpx;
  padding: 32rpx;
  box-shadow: 0 12rpx 30rpx rgba(25, 137, 250, 0.1);
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

.form-field {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.field-label {
  font-size: 28rpx;
  font-weight: 600;
  color: #323233;
}

.task-picker {
  border-radius: 20rpx;
  background: #f7f8fa;
}

.picker-value {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 26rpx 28rpx;
}

.picker-text {
  font-size: 30rpx;
  color: #323233;
}

.field-info {
  display: flex;
  gap: 16rpx;
  flex-wrap: wrap;
}

.info-chip {
  padding: 12rpx 24rpx;
  border-radius: 999rpx;
  background: #eef4ff;
  font-size: 24rpx;
  color: #2962ff;
}

.submit-textarea {
  width: 100%;
  min-height: 200rpx;
  padding: 24rpx;
  border-radius: 20rpx;
  background: #f7f8fa;
  font-size: 30rpx;
  color: #323233;
  box-sizing: border-box;
  line-height: 1.6;
}

.field-hint {
  align-self: flex-end;
  font-size: 22rpx;
  color: #c8c9cc;
}

.upload-tip {
  font-size: 24rpx;
  color: #c8c9cc;
}

.submit-button {
  width: 100%;
  height: 96rpx;
  border-radius: 24rpx;
  background: linear-gradient(90deg, #1989fa 0%, #7232dd 100%);
  color: #ffffff;
  font-size: 32rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 12rpx 24rpx rgba(25, 137, 250, 0.25);
  border: none;
}

.submit-button[disabled] {
  opacity: 0.5;
}


