.personal-tasks-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #87ceeb 0%, #ffffff 100%);
}

.search-section {
  background: var(--bg-primary);
  padding: var(--spacing-md);
}

.tab-content {
  padding: var(--spacing-md);
  min-height: 60vh;
}

.loading-state {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 200rpx;
}

.task-list {
  margin-bottom: 120rpx;
}

.task-card {
  background: var(--bg-primary);
  border-radius: var(--radius-md);
  padding: var(--spacing-lg);
  margin-bottom: var(--spacing-md);
  box-shadow: var(--shadow-sm);
  border-left: 8rpx solid var(--secondary-color);
}

.task-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: var(--spacing-md);
}

.task-title-section {
  flex: 1;
  margin-right: var(--spacing-md);
}

.task-name {
  display: block;
  font-size: var(--font-size-lg);
  font-weight: var(--font-weight-semibold);
  color: var(--text-primary);
  margin-bottom: var(--spacing-sm);
  line-height: 1.4;
}

.task-type {
  font-size: var(--font-size-sm);
  font-weight: var(--font-weight-medium);
  white-space: nowrap;
}

.task-desc {
  display: block;
  font-size: var(--font-size-md);
  color: var(--text-secondary);
  line-height: 1.5;
  margin-bottom: var(--spacing-lg);
}

.progress-section {
  margin-bottom: var(--spacing-lg);
}

.progress-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: var(--spacing-sm);
}

.progress-text {
  font-size: var(--font-size-sm);
  color: var(--text-secondary);
}

.progress-percent {
  font-size: var(--font-size-sm);
  font-weight: var(--font-weight-semibold);
  color: var(--accent-color);
}

.task-meta {
  display: flex;
  flex-wrap: wrap;
  gap: var(--spacing-md);
  margin-bottom: var(--spacing-lg);
  padding-bottom: var(--spacing-lg);
  border-bottom: 1rpx solid var(--bg-tertiary);
}

.meta-item {
  display: flex;
  align-items: center;
  font-size: var(--font-size-sm);
  color: var(--text-tertiary);
}

.meta-item van-icon {
  margin-right: 8rpx;
}

.meta-text {
  font-size: var(--font-size-sm);
}

.score-section {
  margin-bottom: var(--spacing-lg);
}

.score-text {
  font-size: var(--font-size-md);
  font-weight: var(--font-weight-semibold);
  color: var(--warning-color);
}

.action-buttons {
  display: flex;
  gap: var(--spacing-md);
}

.action-buttons van-button {
  flex: 1;
}

.empty-state {
  margin-top: 100rpx;
}

.floating-action {
  position: fixed;
  bottom: var(--spacing-xl);
  left: 50%;
  transform: translateX(-50%);
  z-index: 100;
}

.floating-action van-button {
  box-shadow: var(--shadow-lg);
}
