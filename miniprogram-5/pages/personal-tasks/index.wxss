.personal-tasks-container {
  min-height: 100vh;
  background: #f5f5f5;
}

.search-section {
  background: white;
  padding: 20rpx;
}

.tab-content {
  padding: 20rpx;
  min-height: 60vh;
}

.loading-state {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 200rpx;
}

.task-list {
  margin-bottom: 120rpx;
}

.task-card {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.08);
  border-left: 8rpx solid #667eea;
}

.task-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.task-title-section {
  flex: 1;
  margin-right: 20rpx;
}

.task-name {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 12rpx;
  line-height: 1.4;
}

.task-type {
  font-size: 24rpx;
  font-weight: 500;
  white-space: nowrap;
}

.task-desc {
  display: block;
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
  margin-bottom: 25rpx;
}

.progress-section {
  margin-bottom: 25rpx;
}

.progress-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}

.progress-text {
  font-size: 26rpx;
  color: #666;
}

.progress-percent {
  font-size: 26rpx;
  font-weight: bold;
  color: #07c160;
}

.task-meta {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  margin-bottom: 25rpx;
  padding-bottom: 25rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.meta-item {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #999;
}

.meta-item van-icon {
  margin-right: 8rpx;
}

.meta-text {
  font-size: 24rpx;
}

.score-section {
  margin-bottom: 25rpx;
}

.score-text {
  font-size: 28rpx;
  font-weight: bold;
  color: #ff6b35;
}

.action-buttons {
  display: flex;
  gap: 20rpx;
}

.action-buttons van-button {
  flex: 1;
}

.empty-state {
  margin-top: 100rpx;
}

.floating-action {
  position: fixed;
  bottom: 40rpx;
  left: 50%;
  transform: translateX(-50%);
  z-index: 100;
}

.floating-action van-button {
  box-shadow: 0 8rpx 32rpx rgba(0,0,0,0.15);
}
