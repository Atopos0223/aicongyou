.dashboard-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #87ceeb 0%, #ffffff 100%);
  padding-bottom: var(--spacing-xl);
}

/* 顶部导航栏 */
.header-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: var(--spacing-md) var(--spacing-lg);
  padding-top: calc(var(--spacing-md) + env(safe-area-inset-top));
  background: var(--bg-gradient);
  position: sticky;
  top: 0;
  z-index: 100;
}

.back-button {
  width: 64rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: var(--radius-md);
  background: rgba(255, 255, 255, 0.2);
  transition: opacity 0.3s;
}

.back-button:active {
  opacity: 0.6;
}

.page-title {
  flex: 1;
  text-align: center;
  font-size: var(--font-size-lg);
  font-weight: var(--font-weight-semibold);
  color: var(--text-white);
}

.header-placeholder {
  width: 64rpx;
}

/* 内容区域 */
.dashboard-content {
  padding: var(--spacing-lg);
}

/* 课程总得分卡片 */
.score-card {
  background: var(--bg-primary);
  border-radius: var(--radius-xl);
  padding: var(--spacing-xl);
  margin-bottom: var(--spacing-lg);
  box-shadow: var(--shadow-lg);
  text-align: center;
}

.score-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: var(--spacing-md);
}

.score-label {
  font-size: var(--font-size-lg);
  font-weight: var(--font-weight-semibold);
  color: var(--text-primary);
  margin-bottom: var(--spacing-xs);
}

.score-hint {
  font-size: var(--font-size-sm);
  color: var(--text-tertiary);
}

.score-value {
  font-size: 80rpx;
  font-weight: var(--font-weight-bold);
  color: var(--primary-color);
  line-height: 1.2;
}

/* 总排名卡片 */
.ranking-card {
  background: var(--bg-primary);
  border-radius: var(--radius-xl);
  padding: var(--spacing-lg);
  margin-bottom: var(--spacing-lg);
  box-shadow: var(--shadow-lg);
}

.ranking-header {
  margin-bottom: var(--spacing-md);
}

.ranking-label {
  font-size: var(--font-size-lg);
  font-weight: var(--font-weight-semibold);
  color: var(--text-primary);
}

.ranking-content {
  display: flex;
  align-items: baseline;
  justify-content: center;
  gap: var(--spacing-xs);
}

.ranking-number {
  font-size: var(--font-size-3xl);
  font-weight: var(--font-weight-bold);
  color: var(--warning-color);
}

.ranking-total {
  font-size: var(--font-size-md);
  color: var(--text-tertiary);
}

/* 能力维度达成度分析卡片 */
.ability-dimensions-card {
  background: var(--bg-primary);
  border-radius: var(--radius-xl);
  padding: var(--spacing-lg);
  margin-bottom: var(--spacing-lg);
  box-shadow: var(--shadow-lg);
}

.card-header {
  display: flex;
  flex-direction: column;
  margin-bottom: var(--spacing-lg);
}

.card-title {
  font-size: var(--font-size-lg);
  font-weight: var(--font-weight-semibold);
  color: var(--text-primary);
  margin-bottom: var(--spacing-xs);
}

.card-subtitle {
  font-size: var(--font-size-sm);
  color: var(--text-tertiary);
}

.dimensions-list {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-lg);
}

.dimension-item {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-sm);
}

.dimension-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.dimension-name {
  font-size: var(--font-size-md);
  font-weight: var(--font-weight-medium);
  color: var(--text-primary);
}

.dimension-percent {
  font-size: var(--font-size-md);
  font-weight: var(--font-weight-semibold);
  color: var(--primary-color);
}

.dimension-desc {
  font-size: var(--font-size-sm);
  color: var(--text-secondary);
  line-height: 1.5;
}

/* 任务列表区域 */
.tasks-section {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-lg);
}

.task-list-card {
  background: var(--bg-primary);
  border-radius: var(--radius-xl);
  padding: var(--spacing-lg);
  box-shadow: var(--shadow-lg);
}

.task-count {
  font-size: var(--font-size-sm);
  color: var(--text-tertiary);
  margin-left: var(--spacing-xs);
}

.task-count.warning {
  color: var(--warning-color);
  font-weight: var(--font-weight-medium);
}

.task-list {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-md);
  margin-top: var(--spacing-md);
}

.task-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: var(--spacing-md);
  background: var(--bg-secondary);
  border-radius: var(--radius-md);
  border-left: 4rpx solid transparent;
}

.task-item.completed {
  border-left-color: var(--accent-color);
}

.task-item.pending {
  border-left-color: var(--warning-color);
}

.task-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: var(--spacing-xs);
}

.task-name {
  font-size: var(--font-size-md);
  font-weight: var(--font-weight-medium);
  color: var(--text-primary);
}

.task-score {
  font-size: var(--font-size-sm);
  color: var(--accent-color);
}

.task-deadline {
  font-size: var(--font-size-sm);
  color: var(--warning-color);
}

.task-date {
  font-size: var(--font-size-sm);
  color: var(--text-tertiary);
}

.empty-tasks {
  text-align: center;
  padding: var(--spacing-xl);
  color: var(--text-tertiary);
  font-size: var(--font-size-md);
}