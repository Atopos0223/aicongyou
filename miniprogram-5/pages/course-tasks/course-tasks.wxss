.course-tasks-page {
  min-height: 100vh;
  background: #f5f7fa;
}

/* 课程头部 */
.course-header {
  padding: 30rpx 32rpx;
  color: white;
  border-radius: 0 0 24rpx 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.course-title {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 12rpx;
  line-height: 1.4;
}

.course-term {
  font-size: 28rpx;
  opacity: 0.9;
  margin-bottom: 16rpx;
}

.course-description {
  font-size: 26rpx;
  opacity: 0.8;
  line-height: 1.5;
}

/* 任务统计 */
.task-stats {
  display: flex;
  justify-content: space-around;
  background: white;
  margin: 24rpx 32rpx;
  padding: 32rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-number {
  font-size: 36rpx;
  font-weight: bold;
  color: #1989fa;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
}

/* 任务列表区域 */
.tasks-section {
  margin: 0 32rpx 32rpx;
}

.section-header {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.task-count {
  font-size: 26rpx;
  color: #666;
  margin-left: 12rpx;
}

/* 任务卡片列表 */
.task-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.task-card {
  background: white;
  border-radius: 20rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
}

/* 任务标题和标签 */
.task-header {
  margin-bottom: 20rpx;
}

.task-title-wrapper {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}

.task-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
  margin-right: 16rpx;
  line-height: 1.4;
}

.task-tag {
  flex-shrink: 0;
}

/* 任务描述 */
.task-desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
  margin-bottom: 24rpx;
}

/* 指标网格 */
.metrics-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
  margin-bottom: 24rpx;
}

.metric-item {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.metric-icon-wrapper {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f8f9fa;
  border-radius: 8rpx;
}

.metric-content {
  flex: 1;
}

.metric-label {
  font-size: 24rpx;
  color: #999;
  display: block;
  margin-bottom: 4rpx;
}

.metric-value {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
}

.metric-value.green {
  color: #07c160;
}

.metric-value.orange {
  color: #ff976a;
}

.metric-value.completed {
  color: #07c160;
}

.metric-value.pending {
  color: #ff976a;
}

/* 底部按钮 */
.task-footer {
  display: flex;
  gap: 20rpx;
}

.footer-button {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  padding: 20rpx 0;
  border-radius: 12rpx;
  font-size: 26rpx;
  color: white;
  font-weight: 500;
  transition: all 0.3s ease;
}

.gray-button {
  background: #969799;
}

.gradient-button {
  background: linear-gradient(135deg, #1989fa, #0081ff);
}

.footer-button:active {
  opacity: 0.8;
  transform: scale(0.98);
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 32rpx;
  background: white;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
}

.empty-image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 32rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 32rpx;
  color: #999;
  margin-bottom: 16rpx;
}

.empty-subtext {
  font-size: 26rpx;
  color: #ccc;
}

/* 加载状态 */
.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 32rpx;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f0f0f0;
  border-top: 4rpx solid #1989fa;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 24rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 响应式设计 */
@media (max-width: 375px) {
  .course-header {
    padding: 24rpx 28rpx;
  }
  
  .task-stats {
    margin: 20rpx 28rpx;
    padding: 28rpx;
  }
  
  .tasks-section {
    margin: 0 28rpx 28rpx;
  }
  
  .task-card {
    padding: 28rpx;
  }
  
  .metrics-grid {
    gap: 16rpx;
  }
  
  .task-footer {
    gap: 16rpx;
  }
  
  .footer-button {
    padding: 18rpx 0;
    font-size: 24rpx;
  }
}
/* 任务左侧圆圈 */
.task-left {
  margin-right: 24rpx;
  display: flex;
  align-items: flex-start;
}

.task-checkbox {
  width: 40rpx;
  height: 40rpx;
  border: 2rpx solid #ddd;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.task-checkbox.checked {
  background: #07c160;
  border-color: #07c160;
}

.check-icon {
  color: white;
  font-size: 24rpx;
  font-weight: bold;
}

/* 任务内容 */
.task-content {
  flex: 1;
}

/* 修改任务卡片布局 */
.task-card {
  background: white;
  border-radius: 20rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
  display: flex;
  align-items: flex-start;
}