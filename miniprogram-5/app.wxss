/**app.wxss**/
/* 全局样式变量 */
page {
  /* 主色调 */
  --primary-color: #1989fa;
  --primary-gradient: linear-gradient(135deg, #1989fa 0%, #7232dd 100%);
  --secondary-color: #667eea;
  --accent-color: #07c160;
  --warning-color: #ff976a;
  --danger-color: #ee0a24;
  
  /* 背景色 */
  --bg-primary: #ffffff;
  --bg-secondary: #f7f8fa;
  --bg-tertiary: #f5f5f5;
  --bg-dark: linear-gradient(180deg, #1a1a2e 0%, #16213e 50%, #0f3460 100%);
  --bg-gradient: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  --bg-sky-gradient: linear-gradient(135deg, #87ceeb 0%, #ffffff 100%);
  
  /* 文字颜色 */
  --text-primary: #323233;
  --text-secondary: #646566;
  --text-tertiary: #969799;
  --text-disabled: #c8c9cc;
  --text-white: #ffffff;
  
  /* 间距 */
  --spacing-xs: 8rpx;
  --spacing-sm: 16rpx;
  --spacing-md: 24rpx;
  --spacing-lg: 32rpx;
  --spacing-xl: 48rpx;
  
  /* 圆角 */
  --radius-sm: 12rpx;
  --radius-md: 16rpx;
  --radius-lg: 20rpx;
  --radius-xl: 24rpx;
  --radius-2xl: 32rpx;
  --radius-full: 999rpx;
  
  /* 阴影 */
  --shadow-sm: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
  --shadow-md: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  --shadow-lg: 0 8rpx 24rpx rgba(0, 0, 0, 0.12);
  --shadow-xl: 0 12rpx 32rpx rgba(0, 0, 0, 0.15);
  --shadow-primary: 0 8rpx 20rpx rgba(25, 137, 250, 0.25);
  
  /* 字体大小 */
  --font-size-xs: 22rpx;
  --font-size-sm: 24rpx;
  --font-size-md: 28rpx;
  --font-size-lg: 32rpx;
  --font-size-xl: 36rpx;
  --font-size-2xl: 40rpx;
  --font-size-3xl: 48rpx;
  
  /* 字体粗细 */
  --font-weight-normal: 400;
  --font-weight-medium: 500;
  --font-weight-semibold: 600;
  --font-weight-bold: 700;
}

/* 通用容器 */
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

/* 通用页面容器 */
.page-container {
  min-height: 100vh;
  background: var(--bg-secondary);
  padding: var(--spacing-lg);
  box-sizing: border-box;
}

/* 通用卡片样式 */
.card {
  background: var(--bg-primary);
  border-radius: var(--radius-xl);
  padding: var(--spacing-lg);
  box-shadow: var(--shadow-md);
}

.card-lg {
  border-radius: var(--radius-2xl);
  padding: var(--spacing-xl);
  box-shadow: var(--shadow-lg);
}

/* 通用按钮样式 */
.btn-primary {
  background: var(--primary-gradient);
  color: var(--text-white);
  border-radius: var(--radius-lg);
  box-shadow: var(--shadow-primary);
}

.btn-secondary {
  background: var(--bg-primary);
  color: var(--text-primary);
  border-radius: var(--radius-lg);
  box-shadow: var(--shadow-sm);
}

/* 通用标题样式 */
.page-title {
  font-size: var(--font-size-2xl);
  font-weight: var(--font-weight-semibold);
  color: var(--text-primary);
}

.page-subtitle {
  font-size: var(--font-size-sm);
  color: var(--text-tertiary);
}

/* 通用加载和空状态 */
.loading-container,
.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: var(--spacing-xl);
  min-height: 400rpx;
}

/* 通用返回按钮 */
.back-button {
  width: 72rpx;
  height: 72rpx;
  border-radius: var(--radius-md);
  background: var(--bg-primary);
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: var(--shadow-sm);
  transition: opacity 0.3s;
}

.back-button:active {
  opacity: 0.6;
}
